{
  "name": "askerbot",
  "version": "1.0.0",
  "description": "Asker Fotball chatbot with knowledge base",
  "main": "index.html",
  "scripts": {
    "fetch": "node scripts/fetch.js",
    "parse": "node scripts/parse.js",
    "chunk": "node scripts/chunk.js",
    "embed": "python scripts/embed.py",
    "bm25": "node scripts/build-bm25.js",
    "reindex": "node scripts/reindex.js",
    "chromadb:start": "cd services && ./start_chromadb_service.sh",
    "chromadb:test": "cd services && python chromadb_service.py",
    "quality": "node scripts/quality-report.js",
    "dev": "python -m http.server 8000",
    "serve": "npx serve .",
    "start": "node express-server.js",
    "server": "node express-server.js",
    "test:smoke": "node scripts/smoke-rag.js",
    "test:ui": "npx playwright test --reporter=list",
    "predeploy:check": "npm run test:smoke && npm run test:ui"
  },
  "keywords": [
    "chatbot",
    "fotball",
    "asker",
    "rag",
    "knowledge-base"
  ],
  "author": "Asker Fotball",
  "license": "MIT",
  "engines": {
    "node": ">=14.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/askerfotball/askerbot"
  },
  "dependencies": {
    "@chroma-core/default-embed": "^0.1.8",
    "@xenova/transformers": "^2.17.2",
    "chromadb": "^3.0.17",
    "dotenv": "^17.2.3",
    "openai": "^6.3.0",
    "wink-bm25-text-search": "^2.0.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.0",
    "express": "^5.1.0",
    "netlify-cli": "^23.9.1"
  }
}
